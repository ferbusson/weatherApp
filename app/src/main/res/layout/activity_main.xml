<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.estascionvl_tc_010.weatherapp.MainActivity">

    <TextView
        android:layout_height="wrap_content"
        style="@style/Base.TextAppearance.AppCompat.Display4"
        android:text="@string/ciudad" />


    <TextView
        android:id="@+id/txt_pronostico"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/medium"
        android:text="" />

    <TableRow>
        <TextView
            android:id="@+id/txt_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.TextAppearance.AppCompat.Body2"
            android:layout_marginRight="@dimen/small"
            android:text="@string/tem" />

        <TextView
            android:id="@+id/val_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.TextAppearance.AppCompat.Body2"
            android:text="@string/empty" />
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/txt_humedad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.TextAppearance.AppCompat.Body2"
            android:layout_marginRight="@dimen/small"
            android:text="@string/hum" />

        <TextView
            android:id="@+id/val_hum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.TextAppearance.AppCompat.Body2"
            android:text="@string/empty" />
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/txt_presion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.TextAppearance.AppCompat.Body2"
            android:layout_marginRight="@dimen/small"
            android:text="@string/pres" />

        <TextView
            android:id="@+id/val_pres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.TextAppearance.AppCompat.Body2"
            android:text="@string/empty" />
    </TableRow>
</TableLayout>
